        <activity android:name="com.group.project.auth.VerifyActivity" />
        <activity android:name="com.group.project.auth.GenerateOTPActivity" />
        <activity android:name="com.group.project.welcome.IntroActivity" />
        <activity
            android:name="com.group.project.welcome.WelcomeActivity"
            android:theme="@style/SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.group.project.MainActivity"
            android:exported="true">
            <intent-filter>
                <!-- Text -->
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>
            <!-- Image -->
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="image/*"/>
            </intent-filter>
            <!-- Video -->
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="video/*"/>
            </intent-filter>
        </activity>
        <!-- Others -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/places_api_key" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.group.project.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true"
            tools:replace="android:authorities">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/files_path"
                tools:replace="android:resource" />
        </provider>

        <service
            android:name="com.group.project.notification.FirebaseMessaging"
            android:enabled="true"
            android:exported="true"
            tools:ignore="ExportedService">
            <intent-filter android:exported="true" >
                <action android:exported="true"  android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>