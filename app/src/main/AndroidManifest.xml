        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:theme">
        <activity android:name="com.group.project.TranslationActivity"/>
        <activity android:name="com.group.project.DeleteAccountActivity" />
        <activity android:name="com.group.project.MediaViewActivity" />
        <activity android:name="com.group.project.user.PrivacySettingActivity" />
        <activity android:name="com.group.project.user.NotificationSettingActivity" />
        <activity android:name="com.group.project.user.PrivacyActivity" />
        <activity android:name="com.group.project.user.TermsActivity" />
        <activity android:name="com.group.project.user.MenuActivity" />
        <activity android:name="com.group.project.user.BlockedUserActivity" />
        <activity android:name="com.group.project.user.AddStoryActivity" />
        <activity android:name="com.group.project.user.ViewedStoryActivity" />
        <activity android:name="com.group.project.user.StoryViewActivity" />
        <activity android:name="com.group.project.user.UserActivity" />
        <activity android:name="com.group.project.group.AddMembersActivity" />
        <activity android:name="com.group.project.group.EditGroupActivity" />
        <activity android:name="com.group.project.group.GroupProfile" />
        <activity android:name="com.group.project.user.SendToActivity" />
        <activity android:name="com.group.project.faceFilters.FaceFilters" />
        <activity
            android:name="com.group.project.groupVideoCall.openvcall.ui.VideoGroupCallActivity"
            android:theme="@style/FullScreenVideoTheme" />
        <activity
            android:name="com.group.project.groupVideoCall.CallingGroupVideoActivity"
            android:theme="@style/SplashScreen" />
        <activity
            android:name="com.group.project.groupVideoCall.RingingGroupVideoActivity"
            android:theme="@style/SplashScreen" />
        <activity
            android:name="com.group.project.groupVoiceCall.RingingGroupVoiceActivity"
            android:theme="@style/SplashScreen" />
        <activity
            android:name="com.group.project.groupVoiceCall.CallingGroupVoiceActivity"
            android:theme="@style/SplashScreen" />
        <activity
            android:name="com.group.project.groupVoiceCall.openacall.ui.VoiceCallGroupActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/SplashScreen" />
        <activity android:name="com.group.project.GroupStickers" />
        <activity android:name="com.group.project.group.GroupChatActivity" />
        <activity android:name="com.group.project.group.CreateGroupActivity" />
        <activity android:name="com.group.project.calling.CallingActivity" />
        <activity android:name="com.group.project.calling.RingingActivity" />
        <activity android:name="com.group.project.calling.VideoChatViewActivity" />
        <activity android:name="com.group.project.calling.VoiceChatViewActivity" />
        <activity android:name="com.group.project.user.SendToUsersActivity" />
        <activity android:name="com.group.project.user.MeetingActivity" />
        <activity android:name="com.group.project.party.ChangeWatchPartyActivity" />
        <activity android:name="com.group.project.party.InviteMoreActivity" />
        <activity android:name="com.group.project.party.StartPartyActivity" />
